{
  "hosting": [
    {
      "target": "landing",
      "public": "dist-landing",
      "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
      "rewrites": [{ "source": "**", "destination": "/landing.html" }]
    },
    {
      "target": "app",
      "public": "dist-app",
      "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
      "rewrites": [{ "source": "**", "destination": "/app.html" }]
    }
  ]
}
